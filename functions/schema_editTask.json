{
    "openapi": "3.1.0",
    "info": {
      "title": "Task Management",
      "description": "API for editing tasks with a priority, and date.",
      "version": "v1.0.0"
    },
    "servers": [
      {
        "url": "https://edittask-xamurzhima-uc.a.run.app"
      }
    ],
    "paths": {
      "/edit_task": {
        "post": {
          "description": "Edit an existing task",
          "operationId": "EditTask",
          "requestBody": {
            "description": "Task details to edit",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EditTask"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Task edited successfully"
            },
            "400": {
              "description": "No task details provided"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Task": {
          "type": "object",
          "properties": {
            "task": {
              "type": "string",
              "description": "The task"
            },
            "priority": {
              "type": "string",
              "description": "The priority of the task"
            },
            "date": {
              "type": "string",
              "format": "date-time",
              "description": "The new date of the task in the format 'YYYY-MM-DDTHH:MM'"
            },
            "label": {
              "type": "string",
              "description": "The label of the task"
          },
          "subtasks": {
              "type": "string",
              "description": "The subtasks of the task, separated by semicolons"
          }
          },
          "required": ["task"]
        },
        "EditTask": {
          "type": "object",
          "properties": {
            "task_id": {
              "type": "string",
              "description": "The ID of the task to edit"
            },
            "task": {
              "type": "string",
              "description": "The new task"
            },
            "priority": {
              "type": "string",
              "description": "The new priority of the task"
            },
            "date": {
              "type": "string",
              "format": "date-time",
              "description": "The new date of the task in the format 'YYYY-MM-DDTHH:MM'"
            },
            "label": {
              "type": "string",
              "description": "The label of the task"
          },
          "subtasks": {
              "type": "string",
              "description": "The subtasks of the task, separated by semicolons"
          }
          },
          "required": ["task_id", "task"]
        }
      }
    }
  }