{
    "openapi": "3.1.0",
    "info": {
        "title": "Project Management",
        "description": "API for retrieving projects by user ID",
        "version": "v1.0.1"
    },
    "servers": [
        {
            "url": "https://getprojects-xamurzhima-uc.a.run.app"
        }
    ],
    "paths": {
        "/get_projects": {
            "post": {
                "description": "Retrieve all projects of a given user",
                "operationId": "GetProjects",
                "requestBody": {
                    "description": "User ID to filter projects",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user_id": {
                                        "type": "string"
                                    }
                                },
                                "required": ["user_id"]
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Successful operation",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "projects": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "Invalid user_id supplied"
                        }
                    }
                }
            }
        }
    }
}