{
    "openapi": "3.1.0",
    "info": {
        "title": "Task Management",
        "description": "API for retrieving tasks with a priority.",
        "version": "v1.0.0"
    },
    "servers": [
        {
            "url": "https://getTasks-xamurzhima-uc.a.run.app"
        }
    ],
    "paths": {
        "/get_tasks": {
            "post": {
                "description": "Retrieve all tasks",
                "operationId": "GetTasks",
                "requestBody": {
                    "description": "Project ID to filter tasks",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "project_id": {
                                        "type": "string"
                                    }
                                },
                                "required": ["project_id"]
                            }
                        }
                    }
                },
                "responses": {}
            }
        }
    }
}